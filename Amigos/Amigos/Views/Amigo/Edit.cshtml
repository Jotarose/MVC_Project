@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer internacionalizacion;
@model Amigos.Models.Amigo

@{
    ViewData["Title"] = "Edit";
}

<h1>@internacionalizacion["edit"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="name" class="control-label">@internacionalizacion["nom"]</label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="longi" class="control-label">@internacionalizacion["longi"]</label>
                <input asp-for="longi" class="form-control" />
                <span asp-validation-for="longi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lati" class="control-label">@internacionalizacion["lati"]</label>
                <input asp-for="lati" class="form-control" />
                <span asp-validation-for="lati" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value=@internacionalizacion["edit"] class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@internacionalizacion["vuelta"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
