@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer internacionalizacion;
@model Amigos.Models.Amigo

@{
    ViewData["Title"] = "Delete";
}

<h1>@internacionalizacion["borrado"]</h1>

<h3>@internacionalizacion["confirmacion"]</h3>
<div>
 
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.name) *@
            @internacionalizacion["nom"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.longi) *@
            @internacionalizacion["longi"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.longi)
        </dd>
        <dt class = "col-sm-2">
           @*  @Html.DisplayNameFor(model => model.lati) *@
            @internacionalizacion["lati"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.lati)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value=@internacionalizacion["borrado"] class="btn btn-danger" /> |
        <a asp-action="Index">@internacionalizacion["vuelta"]</a>
    </form>
</div>
