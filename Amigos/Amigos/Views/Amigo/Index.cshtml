@model IEnumerable<Amigos.Models.Amigo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<!-- Creo el formulario para introducir la longitud, latitud y el nombre-->
<form asp-controller="Amigo" asp-action="Index">
    <div style="margin-bottom: 10px;">
        <label style="display: inline-block; width: 100px;">Longitud:</label>
        <input type="text" name="longitud" style="width: 200px; padding: 5px;" />
        <input type="submit" value="Filter" />
    </div>

    <div style="margin-bottom: 10px;">
        <label style="display: inline-block; width: 100px;">Latitud:</label>
        <input type="text" name="latitud" style="width: 200px; padding: 5px;" />
    </div>

    <div style="margin-bottom: 10px;">
        <label style="display: inline-block; width: 100px;">Distancia:</label>
        <input type="text" name="distancia" style="width: 200px; padding: 5px;" />
    </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.longi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lati)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.longi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lati)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
